{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve", // ou "react-jsx" dependendo da lib JSX
    "jsxFactory": "h", // importante se estiver usando `h` do Vue
    "jsxFragmentFactory": "Fragment",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}